<?xml version="1.0" encoding="UTF-8"?>
  <!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  
  <mapper namespace="com.simple.basic.service.board.BoardMapper">
  
    <insert id="regist" parameterType="BoardVO">
  		INSERT INTO BOARD(SNO, NAME, TITLE, CONTENT)
  		VALUES(BOARD_SEQ.NEXTVAL, #{name}, ${title}, ${content})
  	</insert>

  	
  	<select id="getBoard" resultType="BoardVO">
  		SELECT * FROM BOARD ORDER BY SNO DESC
  	</select>
 
  	<delete id="delete" parameterType="int">
  		DELETE FROM BOARD WHERE SNO = #{sno}
  	</delete>
  
  
  </mapper>